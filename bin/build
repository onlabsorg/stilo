#!/usr/bin/env bash

echo "@stilo/bin/build: BUILDING DOCUMENTATION"
echo "------------------------------------------------------------------------------------"

generate-command-documentation () {
    echo "- generating documentation for command: stilo $1"
    DEST="docs/stilo-$1.md"
    echo "# stilo $1" > "$DEST"
    echo "\`\`\`" >> "$DEST"
    bin/stilo $1 --help >> "$DEST"
    echo "\`\`\`" >> "$DEST"
}

generate-command-documentation init
generate-command-documentation install
generate-command-documentation read
generate-command-documentation render
generate-command-documentation uninstall

echo "- generating documentation for command: stilo run"
bin/gen-doc lib/stilo-run.js > docs/stilo-run.md

echo "- generating documentation for command: stilo run http-server"
bin/gen-doc package-template/bin/http-server.js > package-template/docs/http-server.md

echo
